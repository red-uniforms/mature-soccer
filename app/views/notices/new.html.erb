<section id="new-notice" class="first">
  <div class="container">
     <%= form_for @notice, url: notices_path do |f| %>
      <div class="row">
        <%= f.label :제목 %><br>
          <% if @notice.errors.any? %>
    			<div id="error_explanation">
      		  <h2>
                  <%= pluralize(@notice.errors.count, "error") %> prohibited
                   this article from being saved:
               </h2>
      	 <ul>
            <% @notice.errors.full_messages.each do |msg| %>
             <li><%= msg %></li>
            <% end %>
          </ul>
    </div>
  <% end %>
        <%= f.text_field :title, class: "u-full-width" %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "email@example.com", class: "input u-full-width" %>
  </div>

  <div class="actions">
    <%= f.submit "Reset Password", class: "button button-primary u-full-width", data: { confirm: "we will send you a email" } %>
  </div>
<% end %>

<div class="row match-row">
  <%= link_to match, class: "match-row" do %>
  <p class="match-description"><%= match.description %></p>
    <ul class="horizontal match-row">
        <li class="four align-h">
          <p><%= match.home_team.name %></p>
        </li>
        <% if match.status == "0" %>
          <li class="four" id="match-date-holder">
            <p class="hidden match-date" id="match-date"><%= match.date_with_tz.to_s %></p>
            <div class="row">
              <p class="focus match-date-string"></p>
            </div>
            <div class="row">
              <p class="focus match-time-string"></p>
            </div>
          </li>
        <% elsif match.status == "end" and match.home_goal == match.away_goal and (match.pk_home_goal+match.pk_away_goal)>0 %>
          <li class="four align-h">
            <p class="focus match-score">PK <%= match.pk_home_goal %> : <%= match.pk_away_goal %></p>
          </li>
        <% else %>
          <li class="four align-h">
            <p class="focus match-score"><%= match.home_goal %> : <%= match.away_goal %></p>
          </li>
        <% end %>
        <li class="four align-h">
          <p><%= match.away_team.name %></p>
        </li>
    </ul>
  <% end %>
</div>
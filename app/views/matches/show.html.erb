<section class="first">
  <div class="container">
    <div class="row u-mb-20">
      <h5><%= @match.description %></h5>
      <%= link_to schedule_cup_path(cup_url: @cup.cup_url) do %>
        <p><%= @cup.name %></p>
      <% end %>
    </div>
    <div class="row">
      <ul class="horizontal">
        <li class="four">
          <h5><%= @match.home_team.name %></h5>
        </li>
        <li class="four">
          <h5 class="focus">VS</h5>
        </li>
        <li class="four">
          <h5><%= @match.away_team.name %></h5>
        </li>
      </ul>
    </div>
    <!-- where team scores come in -->
    <div class="row bottom-hr">
      <ul class="horizontal">
        <li class="four">
          <h5>0</h5>
        </li>
        <li class="four">
          <h5 class="focus">:</h5>
        </li>
        <li class="four">
          <h5>0</h5>
        </li>
      </ul>
    </div>
    <% if @cup.organizers.map{ |o| o.user }.include? current_user %>
      <% if @referees.any? %>
        <% @referees.each do |ref| %>
          <div class="row">
            <ul class="horizontal">
              <li class="six align-h">
                <p><%= ref.organizer.user.name %></p>
              </li>
              <li class="six align-h">
                <p><%= ref.organizer.user.email %></p>
              </li>
            </ul>
          </div>
        <% end %>
      <% end %>
      <%= form_for @referees.new, url: { controller: 'matches', action: 'referee'} do |f| %>
        <div class="row bottom-hr">
          <div class="four columns align-h">
            <label class="align-h focus">심판 추가</label>
          </div>
          <div class="four columns align-h">
            <select class="u-full-width" name="referee[organizer_id]">
              <% @cup.organizers.each do |o| %>
                <%= content_tag("option", value: o.id) do %>
                  <%= o.user.name %>
                <% end %>
              <% end %>
            </select>
          </div>
          <div class="four columns align-h">
            <%= f.submit "추가하기", class: "button button-small u-full-width" %>
          </div>
        </div>
      <% end %>
      <div class="row" id="lineup">
        <div class="six columns" id="home-team">
          <div class="row u-mb-10">
            <p><%= @match.home_team.name %></p>
          </div>
          <div class="row">
            <div class="eight columns">
              <ul class="horizontal">
                <li class="six">
                  <p>이름</p>
                </li>
                <li class="six">
                  <p>학번</p>
                </li>
              </ul>
            </div>
          </div>
          <% @match.home_team.members.each do |m| %>
            <div class="row u-mb-10">
              <div class="eight columns">
                <ul class="horizontal">
                  <li class="six">
                    <p><%= m.user.name %></p>
                  </li>
                  <li class="six">
                    <p><%= m.student_code %></p>
                  </li>
                </ul>
              </div>
              <div class="four columns">
                <!-- chages over time -->
                <% if @players.include? m.user %>
                  <p>골 어시스트 카드 교체 in 교체 out</p>
                <% end %>
                <%= link_to({ controller: "matches", action: "player", anchor: m.user.id }, { method: :post, id: m.user.id }) do %>
                  <input type="button" class="u-full-width button small" value="검인">
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="six columns" id="home-team">
          <div class="row">
            <p><%= @match.away_team.name %></p>
          </div>
          <div class="row">
            <ul class="horizontal">
              <li class="six">
                <p>이름</p>
              </li>
              <li class="six">
                <p>학번</p>
              </li>
            </ul>
          </div>
          <% @match.away_team.members.each do |m| %>
            <div class="row">
              <ul class="horizontal">
                <li class="six">
                  <p><%= m.user.name %></p>
                </li>
                <li class="six">
                  <p><%= m.student_code %></p>
                </li>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</section>

<% if @cup.organizers.map{ |o| o.user }.include? current_user %>
  <section id="controller">
    <div class="container u-p-0">
      <div class="row">
        <div class="twelve columns">
          <%= link_to @match, method: :delete, data: { confirm: "정말로 삭제하시겠습니까?" } do %>
            <input type="button" class="button button-danger u-full-width" value="삭제하기" id="delete-match">
          <% end %>
        </div>
      </div>
    </div>
  </section>
<% end %>
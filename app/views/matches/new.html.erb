<section id="new-team" class="first">
  <div class="container">
    <div class="row">
      <h5 class="u-pull-left">새로운 경기 등록</h5>
    </div>
    <%= form_for @match do |f| %>
      <div class="row">
        <div class="row">
          <%= f.label :date, value: "경기 날짜 & 시간", class: "u-pull-left" %>
        </div>
        <p class="label">경기 날짜를 입력해주세요</p>
        <div style="overflow:hidden;">
          <div class="form-group">
            <div class="row">
              <div id="datetimepicker12"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="six columns">
          <div class="row">
            <%= f.label :home_team, value: "홈 팀", class: "u-pull-left" %>
          </div>
          <p class="label">홈 팀을 지정해주세요</p>
          <%= f.select(:home_team, options_from_collection_for_select(@cup.teams, "id","name"), {}, { class: "u-full-width"}) %>
        </div>
        <div class="six columns">
          <div class="row">
            <%= f.label :away_team, value: "어웨이 팀", class: "u-pull-left" %>
          </div>
          <p class="label">어웨이 팀을 지정해주세요</p>
          <%= f.select(:away_team, options_from_collection_for_select(@cup.teams, "id","name"), {}, { class: "u-full-width"}) %>
        </div>
      </div>
      <div class="row">
        <div class="six columns">
          <div class="row">
            <%= f.label :description, value: "경기 설명", class: "u-pull-left" %>
          </div>
          <p class="label">경기에 대한 설명을 입력해주세요</p>
          <%= f.text_field :description, placeholder: "공대 학장배 조별예선 1차전 기숙사 운동장", class: "u-full-width" %>
        </div>
        <div class="six columns">
        </div>
      </div>
    <% end %>
  </div>
</section>
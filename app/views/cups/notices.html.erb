<section class="first" id="notices">
  <div class="container">
    <%= render partial: 'navbar' %>

    <!-- Actual Content -->
    <div class="row bottom-hr">
      <ul class="horizontal">
        <li class="six">
          <h5 class="u-pull-left">공지사항</h5>
        </li>
        <li class="six">
          <%= link_to new_notice_path do %>
            <h5 class="focus u-pull-right">공지 추가</h5>
          <% end %>
        </li>
      </ul>
    </div>
    <% if @notices.any? %>
      <%= render(@notices) %>
    <% else %>
      <div class="row u-mt-10">
        <p>더 이상 표시할 공지사항이 없습니다.</p>
      </div>
    <% end %>
  </div>
</section>
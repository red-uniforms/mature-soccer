<div class="row">
  <%= link_to({controller: "teams", action: "show", team_url: team.team_url}, class: "no-deco") do %>
    <div class="twelve columns card u-left-align">
      <ul class="horizontal">
        <li class="three u-center-align">
          <% if current_user && current_user.id == team.captain_user_id %>
            <%= image_tag('team_captain_icon.png', class: "icon", alt: "team icon") %>
          <% else %>
            <%= image_tag('team_icon_2.png', class: "icon", alt: "team icon") %>
          <% end %>
        </li>
        <li class="nine">
          <div class="five columns">
            <p><%= team.name %></p>
          </div>
          <div class="four columns">
            <p><%= team.uniform_description %></p>
          </div>
          <div class="three columns">
            <p><%= team.users_count %>ëª…</p>
          </div>
        </li>
      </ul>
    </div>
  <% end %>
</div>

<section class="first" id="team-profile">
  <div class="container">
    <div class="row">
      <h5 class="u-pull-left">Profile</h5>
    </div>
    <div class="row">
      <%= render(@team) %>
      <div class="eight columns">
        <div class="twelve columns">
          <div class="row">
            <h5 class="u-pull-left">Team info</h5>
          </div>
          <div class="row">
            <div class="four columns">
              <div class="row">
                <p><strong>Name</strong></p>
              </div>
              <div class="row">
                <p><%= @team.name %></p>
              </div>
            </div>
            <div class="four columns">
              <div class="row">
                <p><strong>Gender</strong></p>
              </div>
              <div class="row">
                <p><%= @team.gender %></p>
              </div>
            </div>
            <div class="four columns">
              <div class="row">
                <p><strong>Age</strong></p>
              </div>
              <div class="row">
                <p><%= @team.average_age %></p>
              </div>
            </div>
          </div>
          <!-- Copy invite link -->
          <div class="row">
            <h5 class="u-pull-left">Invite link</h5>
          </div>
          <div class="row">
            <div class="ten columns">
              <input class="input u-full-width" value="http://amaccer.com/teams/enccer" id="data-copy-link" disabled>
            </div>
            <div class="two columns copy">
              <button class="button copy button-primary" id="copy-link">
                <%= image_tag("link.png", class: "link") %>
              </button>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</section>
<section id="members">
  <div class="container">
    <div class="row">
      <h5 class="u-pull-left">Members</h5>
    </div>
    <% @team.members.each do |user_info| %>
      <div class="row u-mb-10">
        <div class="two columns">
          <span><%= user_info.user.name %></span>
        </div>
        <div class="one column">
          <span><%= user_info.user.age %></span>
        </div>
        <div class="three columns">
          <span><%= user_info.phone %></span>
        </div>
        <div class="three columns">
          <span><%= user_info.student_code %></span>
        </div>
        <div class="three columns">
          <span><%= user_info.career %></span>
        </div>
      </div>
    <% end %>
  </div>
</section>
<% if current_user.id == @team.captain_user_id and @team.applicants.any? %>
  <section id="applicants">
    <div class="container">
      <div class="row">
        <h5 class="u-pull-left">Applicants</h5>
      </div>
      <div class="row">
        <label class="u-pull-left u-mb-10">List of applicants</label>
      </div>
      <% @applicants.each do |a| %>
        <div class="row u-mb-10">
          <div class="three columns">
            <span><%= a.phone %></span>
          </div>
          <div class="three columns">
            <span><%= a.student_code %></span>
          </div>
          <div class="two columns">
            <span><%= a.user.age %></span>
          </div>
          <div class="two columns">
            <span><%= a.user.name %></span>
          </div>
          <div class="one column">
            <%= link_to({controller: "teams", action: "approve", team_url: @team.team_url, user_info_id: a.id},{ method: :post }) do %>
              Approve
            <% end %>
          </div>
          <div class="one column">
            <%= link_to({controller: "teams", action: "approve", team_url: @team.team_url, user_info_id: a.id},{ method: :delete, class: "danger", data: { confirm: 'Are you sure?'} } ) do %>
              Reject
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </section>
<% end %>

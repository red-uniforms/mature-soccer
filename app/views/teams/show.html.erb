<section class="first" id="team-profile">
  <div class="container">
    <div class="row u-mb-10">
      <h5><%= @team.name %></h5>
    </div>
    <div class="row">
      <h5 class="u-pull-left">팀 정보</h5>
    </div>
    <div class="row">
      <div class="twelve columns">
        <div class="row">
          <div class="four columns">
            <div class="row">
              <p><strong>이름</strong></p>
            </div>
            <div class="row">
              <p><%= @team.name %></p>
            </div>
          </div>
          <div class="four columns">
            <div class="row">
              <p><strong>팀 성별</strong></p>
            </div>
            <div class="row">
              <p><%= @team.gender %></p>
            </div>
          </div>
          <div class="four columns">
            <div class="row">
              <p><strong>평균 나이</strong></p>
            </div>
            <div class="row">
              <p><%= @team.average_age %></p>
            </div>
          </div>
        </div>
        <!-- Copy invite link -->
        <div class="row u-mt-10">
          <h5 class="u-pull-left">초대 링크</h5>
        </div>
        <p class="u-pull-left">멤버들에게 전달해 가입 신청을 받으세요.</p>
        <div class="row">
          <div class="ten columns">
            <%= content_tag(:input, value: @team.url, class: "input u-full-width", disabled: true, id: "data-copy-link" ) do %><% end %>
          </div>
          <div class="two columns copy">
            <button class="button copy button-primary" id="copy-link">
              <%= image_tag("link.png", class: "link") %>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section id="members">
  <div class="container">
    <div class="row">
      <h5 class="u-pull-left">멤버</h5>
    </div>
    <% @team.members.each do |user_info| %>
      <div class="row u-mb-10 bottom-hr">
        <div class="six columns">
          <ul class="horizontal">
            <li class="four">
              <span><%= user_info.user.name %></span>
            </li>
            <li class="four">
              <span><%= user_info.user.age %></span>
            </li>
            <li class="four">
              <span><%= user_info.phone %></span>
            </li>
          </ul>
        </div>
        <div class="six columns">
          <ul class="horizontal">
            <li class="six">
              <span><%= user_info.student_code %></span>
            </li>
            <li class="six">
              <span><%= user_info.user.email %></span>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</section>
<% if @team.captains.include? current_user and @team.applicants.any? %>
  <section id="applicants">
    <div class="container">
      <div class="row">
        <h5 class="u-pull-left">Applicants</h5>
      </div>
      <div class="row">
        <label class="u-pull-left u-mb-10">List of applicants</label>
      </div>
      <% @applicants.each do |a| %>
        <div class="row u-mb-10">
          <div class="three columns">
            <span><%= a.phone %></span>
          </div>
          <div class="three columns">
            <span><%= a.student_code %></span>
          </div>
          <div class="two columns">
            <span><%= a.user.age %></span>
          </div>
          <div class="two columns">
            <span><%= a.user.name %></span>
          </div>
          <div class="one column">
            <%= link_to({controller: "teams", action: "approve", team_url: @team.team_url, user_info_id: a.id},{ method: :post }) do %>
              Approve
            <% end %>
          </div>
          <div class="one column">
            <%= link_to({controller: "teams", action: "approve", team_url: @team.team_url, user_info_id: a.id},{ method: :delete, class: "danger", data: { confirm: 'Are you sure?'} } ) do %>
              Reject
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </section>
<% end %>
